{
  "name": "I Love SteemPeak",
  "description": "A Chrome Web Extension for those who love SteemPeak",
  "version": "1.0.1",
  "version_name": "1.0.1-beta",
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "ils@selabie68.github.io"
    }
  },
  "browser_action": {
    "default_title": "I Love SteemPeak",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "*://steemit.com/*",
    "*://busy.org/*",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "storage"
  ],
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  }
}
